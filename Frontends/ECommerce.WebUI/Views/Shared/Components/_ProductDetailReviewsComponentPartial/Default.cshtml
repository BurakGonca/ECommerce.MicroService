@model List<ResultCommentDto>



<div class="tab-pane fade" id="reviews" role="tabpanel">

	<div class="row">

		<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
			<div class="p-b-30 m-lr-15-sm">

				@if (Model == null || !Model.Any())
				{
					<p class="stext-102 cl6" style="color: #d4a017;">
						Bu ürüne henüz yorum yapılmamış. İlk yorumu siz yapabilirsiniz!
					</p>
					<br />

				}
				else
				{
					@foreach (var item in Model)
					{
						<!-- Review -->
						<div class="flex-w flex-t p-b-68">
							<div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
								<img src="@item.ImageUrl" alt="@item.ImageUrl">
							</div>

							<div class="size-207">
								<div class="flex-w flex-sb-m p-b-17">
									<span class="mtext-107 cl2 p-r-20">
										@item.NameSurname - @item.CreatedDate.ToShortDateString()
									</span>

									<span class="fs-18 cl11">
										@for (int i = 1; i <= 5; i++)
										{
											if (i <= item.Rating)
											{
												<i class="zmdi zmdi-star"></i>
											}
											else
											{
												<i class="zmdi zmdi-star-outline"></i>
											}
										}
									</span>
								</div>

								<p class="stext-102 cl6">
									@item.CommentDetail
								</p>
							</div>
						</div>
					}
				}


				@* user login olduktan sonra degistirecegim *@
				<!-- Add review -->
				@await Html.PartialAsync("~/Views/ProductDetail/AddComment.cshtml" , new { id = ViewBag.Id })
				
			</div>
		</div>
	</div>
</div>