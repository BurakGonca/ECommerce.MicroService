@model List<ResultCategoryDto>


<!-- Logo desktop -->
<a asp-controller="Default" asp-action="Index" class="logo">
	<img src="~/cozastore-master/images/icons/logo-01.png" alt="IMG-LOGO">
</a>

<!-- Menu desktop -->
<div class="menu-desktop">
	<ul class="main-menu">

		<li @* class="active-menu" *@>
			<a asp-controller="Default" asp-action="Index">Anasayfa</a>
		</li>

		<li >
			<a >Kategoriler</a>
			<ul class="sub-menu">

				@foreach (var item in Model)
				{
					<li><a asp-controller="ProductList" asp-action="ProductsByCategoryId" asp-route-categoryId="@item.CategoryID.ToString()">@item.CategoryName</a></li>
				}
				
			</ul>
		</li>

		<li>
			<a asp-controller="ProductList" asp-action="Index">Ürünler</a>
		</li>

		
		<li class="label1" data-label1="yeni">
			<a href="~/cozastore-master/shoping-cart.html">Günün Fırsatı</a>
		</li>

	</ul>
</div>

<!-- Icon header -->
<div class="wrap-icon-header flex-w flex-r-m">
	<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
		<i class="zmdi zmdi-search"></i>
	</div>

	<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="2">
		<i class="zmdi zmdi-shopping-cart"></i>
	</div>

	<a href="#" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0">
		<i class="zmdi zmdi-favorite-outline"></i>
	</a>
</div>