
@{
    ViewData["Title"] = "CreateProductImage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

}

@model CreateProductImageDto



<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Görselleri Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        
                        <input type="hidden" asp-for="ProductId" />
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" asp-for="Image1" />
                        <br />
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" asp-for="Image2" />
                        <br />
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" asp-for="Image3" />
                        <br />

                        <button class="btn btn-success">Ürün Görsellerini Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>
