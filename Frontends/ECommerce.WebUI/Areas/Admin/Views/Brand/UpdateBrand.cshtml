
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

@model UpdateBrandDto


<section class="content container-fluid">
	<div class="row">

		<div class="col-md-12">
			<div class="chart-box">
				<h4>Marka Güncelleme</h4>
				<div class="bs-example" data-example-id="bordered-table">
					<form method="post">

						<input type="hidden" asp-for="BrandID" />
						<input type="text" class="form-control" asp-for="BrandName" />
						<br />
						<label>Marka Görseli</label>
						<input type="text" class="form-control" asp-for="ImageUrl" />
						<br />
						<button class="btn btn-primary">Güncelle</button>
					</form>
				</div>
			</div>
		</div>


	</div>
</section>

