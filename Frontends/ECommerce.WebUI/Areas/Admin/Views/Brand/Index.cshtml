
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

@model List<ResultBrandDto>

<section class="content container-fluid">
	<div class="row">

		<div class="col-md-12">
			<div class="chart-box">

				<div class="bs-example" data-example-id="bordered-table">
					<table class="table table-bordered">
						<thead>
							<tr>
								<th>#</th>
								<th>Marka Adı</th>
								<th>Marka Görseli</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								count++;
								<tr>
									<th scope="row">@count</th>
									<td>@item.BrandName</td>
									<td>
										<img src="@item.ImageUrl" alt="Marka Görseli" width="70" height="50" style="object-fit: cover; border-radius: 5px;" />
									</td>
									<td><a href="/Admin/Brand/DeleteBrand/@item.BrandID" class="btn btn-danger">Sil</a></td>
									<td><a href="/Admin/Brand/UpdateBrand/@item.BrandID" class="btn btn-warning">Güncelle</a></td>
								</tr>
							}

						</tbody>
					</table>
					<a href="/Admin/Brand/CreateBrand/" class="btn btn-primary">Yeni Marka</a>
				</div>
			</div>
		</div>



	</div>
</section>

